<div class="show_div">
  <p id="notice"><%= notice %></p>

  <p>
    <strong><%= label_tag Comment.human_attribute_name(:user) %>:</strong>
    <%= @comment.user_id %>
  </p>

  <p>
    <strong><%= label_tag Comment.human_attribute_name(:task) %>:</strong>
    <%= @comment.task_id %>
  </p>

  <p>
    <strong><%= label_tag Comment.human_attribute_name(:content) %>:</strong>
    <%= @comment.content %>
  </p>

  <%= link_to t(:edit), edit_comment_path(@comment) %> |
  <%= link_to t(:back), comments_path %>
</div>
