<div class="form_div">
  <%= form_for(comment) do |f| %>
    <% if comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(comment.errors.count, "error") %> <%= t("errors.plural")%></h2>
        <ul>
          <% comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :user_id %>
      <%= f.number_field :user_id, class:"simple_input" %>
    </div>

    <div class="field">
      <%= f.label :task_id %>
      <%= f.number_field :task_id, class:"simple_input" %>
    </div>

    <div class="field">
      <%= f.label :content %>
      <%= f.text_field :content, class:"simple_input" %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
