<h1 class="object_title"><%= t("priority.priorities") %></h1>

<table class="table table-responsive table-hover table-bordered sub_data">
  <tr>
    <th><%= label_tag Priority.human_attribute_name(:name) %></th>
    <th><%= label_tag Priority.human_attribute_name(:description) %></th>    
    <th colspan="3"></th>
  </tr>
  <% @priorities.each do |priority| %>
    <tr>
      <td><%= priority.name %></td>
      <td><%= priority.description %></td>
      <td><%= link_to t(:show), priority %></td>
      <td><%= link_to t(:edit), edit_priority_path(priority) %></td>
      <td><%= link_to t(:delete), priority, method: :delete, data: { confirm: t(:confirm) } %></td>
    </tr>
  <% end %>
</table>

<div class="bottom_link">
  <%= link_to  t("priority.new_priority"), new_priority_path %>
</div>
