<h1 class="object_title"><%= t("vertical.verticals") %></h1>

<table class="table table-responsive table-hover table-bordered sub_data">
    <tr>
      <th><%= label_tag Vertical.human_attribute_name(:name) %></th>
      <th><%= label_tag Vertical.human_attribute_name(:description) %></th>
      <th colspan="3"></th>
    </tr>
    <% @verticals.each do |vertical| %>
      <tr>
        <td><%= vertical.name %></td>
        <td><%= vertical.description %></td>
        <td><%= link_to t(:show), vertical %></td>
        <td><%= link_to t(:edit), edit_vertical_path(vertical) %></td>
        <td><%= link_to t(:delete), vertical, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
</table>

<div class="bottom_link">
  <%= link_to t("vertical.new_vertical"), new_vertical_path %>
</div>
