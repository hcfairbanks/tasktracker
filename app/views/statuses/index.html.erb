<h1 class="object_title"><%= t("status.statuses") %></h1>

<table class="table table-responsive table-hover table-bordered sub_data">
    <tr>
      <th><%= label_tag Status.human_attribute_name(:name) %></th>
      <th><%= label_tag Status.human_attribute_name(:description) %></th>
      <th colspan="3"></th>
    </tr>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><%= link_to t(:show), status %></td>
        <td><%= link_to t(:edit), edit_status_path(status) %></td>
        <td><%= link_to t(:delete), status, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
</table>

<div class="bottom_link" >
  <%= link_to t("status.new_status"), new_status_path %>
</div>
