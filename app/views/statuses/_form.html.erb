<div class="form_div">
  <%= form_for(status) do |f| %>
    <% if status.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(status.errors.count, "error") %> <%= t("errors.plural")%></h2>
        <ul>
          <% status.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, class:"simple_input" %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description, class:"simple_input" %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
