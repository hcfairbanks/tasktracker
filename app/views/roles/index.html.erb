<h1 class="object_title"><%= t("role.roles") %></h1>

<table class="table table-responsive table-hover table-bordered sub_data">
    <tr>
      <th><%= label_tag Role.human_attribute_name(:name) %></th>
      <th><%= label_tag Role.human_attribute_name(:description) %></th>
      <th colspan="3"></th>
    </tr>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= role.description %></td>
        <td><%= link_to t(:show), role %></td>
        <td><%= link_to t(:edit), edit_role_path(role) %></td>
        <td><%= link_to t(:delete), role, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
</table>

<div class="bottom_link">
  <%= link_to t("role.new_role"), new_role_path %>
</div>
